<Window x:Class="PomodoroTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroTimer"
        mc:Ignorable="d"
        Title="Pomodoro Timer" Height="291.317" Width="331.137" Topmost="True"
        AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Grid>
        <Image x:Name="imgTomato" Margin="10" Source="pack://application:,,,/Resources/images/tomato.png"/>
        <Label x:Name="txtTimeRemaining" Content="00:00" FontSize="48" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="txtTimeRemaining_MouseDown">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>

    </Grid>
</Window>
